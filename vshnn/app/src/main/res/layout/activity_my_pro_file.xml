<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MyProFileActivity">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarmanhinhchinh"
                android:background="#78af7e"
                app:title="MY PROFILE"

                app:titleTextColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="50dp"></android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/user"
                    tools:layout_editor_absoluteY="52dp"
                    tools:layout_editor_absoluteX="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:hint="Full name"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    tools:layout_editor_absoluteY="52dp"
                    tools:layout_editor_absoluteX="168dp"
                    android:layout_below="@+id/edtusername1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="13dp"
                    android:id="@+id/edtfullname1" />
                <EditText
                    android:hint="User Name"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    tools:layout_editor_absoluteY="102dp"
                    tools:layout_editor_absoluteX="168dp"
                    android:id="@+id/edtusername1"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_alignStart="@+id/edtfullname1" />
                <EditText
                    android:hint="Email"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    tools:layout_editor_absoluteY="152dp"
                    tools:layout_editor_absoluteX="168dp"
                    android:id="@+id/edtEmail1"
                    android:layout_below="@+id/edtfullname1"
                    android:layout_alignStart="@+id/edtfullname1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PERSONAL INFORMATION"
                    android:textColor="#99ae1102"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtfnamed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"

                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Full name"
                    android:textColor="#99054a68"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtmailluser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/edtfnamed"
                    android:layout_below="@+id/edtfnamed"
                    android:text="email"
                    android:textColor="#99054a68"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtwebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/edtmailluser"
                    android:layout_below="@+id/edtmailluser"
                    android:text="website"
                    android:textColor="#99054a68"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/edtwebsite"
                    android:layout_below="@+id/edtwebsite"
                    android:text="Adress"
                    android:textColor="#99054a68"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/edtAddress"
                    android:layout_below="@+id/edtAddress"
                    android:text="PhoneNumber"
                    android:textColor="#99054a68"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/btnEditProfile"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/edtAddress"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"
                    android:text="Edit My ProFile" />


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edtfnamed"
                    android:layout_alignBottom="@+id/edtfnamed"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:text="Full Name:" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/edtwebsite"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="10dp"
                    android:text="Email" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/edtAddress"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="10dp"
                    android:text="Website" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/edtPhoneNumber"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="10dp"
                    android:text="Address" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edtPhoneNumber"
                    android:layout_alignBottom="@+id/edtPhoneNumber"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:text="Phone Number" />

            </RelativeLayout>
        </LinearLayout>
        <android.support.design.widget.NavigationView
            app:headerLayout="@layout/header"
            android:id="@+id/navigationview"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/menu_app"

            >
            <!--<ListView-->
            <!--android:id="@+id/lstmenu"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"></ListView>-->
        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>